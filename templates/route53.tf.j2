
data "aws_route53_zone" "selected" {
  name = "{{ route53_domain_name }}."
}

resource "aws_route53_record" "rds" {
  zone_id = "${data.aws_route53_zone.selected.zone_id}"
{% if project_deployment_environment == 'prod' %}
  name = "rds.{{ project_name }}.${data.aws_route53_zone.selected.name}"
{% else %}
  name = "rds.{{ project_deployment_environment }}.{{ project_name }}.${data.aws_route53_zone.selected.name}"
{% endif %}
  type = "CNAME"

  ttl = 300
  records = ["${aws_db_instance.default.address}"]
}

resource "aws_route53_record" "this" {
  zone_id = "${data.aws_route53_zone.selected.zone_id}"
{% if project_deployment_environment == 'prod' %}
  name = "{{ project_name }}.${data.aws_route53_zone.selected.name}"
{% else %}
  name = "{{ project_deployment_environment }}.{{ project_name }}.${data.aws_route53_zone.selected.name}"
{% endif %}
  type = "A"
  alias {
    name = "${aws_cloudfront_distribution.this.domain_name}"
    zone_id = "${aws_cloudfront_distribution.this.hosted_zone_id}"
    evaluate_target_health = false
  }
}

resource "aws_route53_record" "cert_default" {
  name = "${aws_acm_certificate.default.domain_validation_options.0.resource_record_name}"
  type = "${aws_acm_certificate.default.domain_validation_options.0.resource_record_type}"
  zone_id = "${data.aws_route53_zone.selected.id}"
  records = ["${aws_acm_certificate.default.domain_validation_options.0.resource_record_value}"]
  ttl = 300
}


resource "aws_route53_record" "cert_alternative" {
  name = "${aws_acm_certificate.default.domain_validation_options.1.resource_record_name}"
  type = "${aws_acm_certificate.default.domain_validation_options.1.resource_record_type}"
  zone_id = "${data.aws_route53_zone.selected.id}"
  records = ["${aws_acm_certificate.default.domain_validation_options.1.resource_record_value}"]
  ttl = 300
}

{% if aws_region != 'us-east-1' %}
resource "aws_acm_certificate" "us-east-1" {
  provider = "aws.us-east-1"
  domain_name = "{{ project_name }}.{{ route53_domain_name }}"
  subject_alternative_names = ["{{ project_deployment_environment }}.{{ project_name }}.{{ route53_domain_name }}"]
  validation_method = "DNS"
}
{% endif %}

resource "aws_acm_certificate" "default" {
  domain_name = "{{ project_name }}.{{ route53_domain_name }}"
  subject_alternative_names = ["{{ project_deployment_environment }}.{{ project_name }}.{{ route53_domain_name }}"]
  validation_method = "DNS"
}

resource "aws_acm_certificate_validation" "default" {
  certificate_arn = "${aws_acm_certificate.default.arn}"
  validation_record_fqdns = ["${aws_route53_record.cert_default.fqdn}", "${aws_route53_record.cert_alternative.fqdn}"]
}
