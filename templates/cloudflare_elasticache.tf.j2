resource "cloudflare_record" "redis" {
  domain = "{{ project_env_zone }}"
{% if project_deployment_environment == 'prod' %}
  name = "redis.{{ project_name }}.{{ project_env_zone }}"
{% else %}
  name = "redis.{{ project_deployment_environment }}.{{ project_name }}.{{ project_env_zone }}"
{% endif %}
  value = "${aws_elasticache_replication_group.this.primary_endpoint_address}"
  type = "CNAME"
  ttl = 300
}
