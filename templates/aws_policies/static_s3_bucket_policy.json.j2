{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "PrivateListGetBucket",
            "Effect": "Allow",
            "Principal": {
                "AWS": [
                    "${aws_iam_user.deployer.arn}"
                ] 
            },
            "Action": [
                "s3:GetBucketLocation",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::{{ s3_bucket_name }}"
            ]
        },
        {
            "Sid": "PrivateGetPutObject",
            "Effect": "Allow",
            "Principal": {
                "AWS": [
                    "${aws_iam_user.deployer.arn}"
                ]
            },
            "Action": [
                "s3:Get*",
                "s3:Put*",
                "s3:Delete*"
            ],
            "Resource": [
                "arn:aws:s3:::{{ s3_bucket_name }}/*"
            ]
        }
    ]
}
